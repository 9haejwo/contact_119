<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="32dp"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/iv_tumbnail"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginVertical="12dp"
        android:background="@drawable/circle_frame"
        android:clipToOutline="true"
        android:elevation="4dp"
        android:src="@drawable/seoul_univ_logo"
        app:layout_constraintBottom_toTopOf="@id/tv_item_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxWidth="100dp"
        android:maxLines="2"
        android:text="서울대학교 응급의료센터"
        android:textSize="13sp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/iv_tumbnail"
        app:layout_constraintStart_toStartOf="@id/iv_tumbnail"
        app:layout_constraintEnd_toEndOf="@id/iv_tumbnail"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_favorite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_title">

    <ImageView
        android:id="@+id/iv_favorite"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:adjustViewBounds="true"
        android:src="@drawable/favorite_big_off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>